            android:id="@+id/student_total_debt"
            android:layout_marginLeft="3dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:text="loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
