<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="30dp">
    <TextView
        android:textAlignment="center"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="@string/study_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="17sp"
            android:textAlignment="center"
            android:text="Trung bình chung tích lũy:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/average_cumulative"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:textAlignment="center"
            android:text="Tổng số tín chỉ:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="17sp"
            android:text=""
            android:id="@+id/total_credit"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17sp"
            android:id="@+id/title_2"
            android:layout_gravity="start"
            android:textAlignment="center"
            android:text="Số tín chỉ nợ (Điểm F - tỉ lệ %):"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/debt_credits"
            android:text=""
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:textSize="17sp"
        android:id="@+id/close"
        android:textColor="@color/colorPrimary"
        android:text="Đóng"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>