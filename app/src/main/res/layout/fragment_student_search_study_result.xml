<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.home.fragments.StudentStudyResultFragment">
    <TextView
        android:visibility="invisible"
        android:id="@+id/semester_select_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn học kì:"
        android:textStyle="bold"
        android:textColor="@color/grayDark"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"/>
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/study_result_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/loaded_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        <TableLayout
            android:id="@+id/study_result_table_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TableLayout>
        <ScrollView
            android:background="@color/grayLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/study_result_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
