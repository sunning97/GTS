<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.home.fragments.StudentStudyResultFragment">
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="invisible"
        app:ms_dropdown_max_height="300dp"
        app:ms_background_color="@color/grayLight"
        app:ms_text_color="@color/colorPrimary"
        android:id="@+id/study_result_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/loaded_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">
        <TableLayout
            android:id="@+id/study_result_table_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TableLayout>
        <ScrollView
            android:background="@color/grayLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:id="@+id/study_result_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
